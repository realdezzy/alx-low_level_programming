NAME:= school
OBJ:= $(wildcard *.o)
RM:= rm
CC:=gcc
SRC:=$(wildcard *.c)
VIM:= $(wildcard *.sw[op])
EMACS:= $(wildcard *~)
CFLAGS:= $(-Wall -Werror -Wextra -pedantic)
all: $(SRC)
	$(CC) $(CFLAGS) -c -o $^ $@
clean:                  
	$(RM) -r $(VIM) $(EMACS) $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) $(VIM) $(EMACS) $(OBJ) $(NAME)

re: clean
	$(CC) $(SRC) -o $(NAME)
