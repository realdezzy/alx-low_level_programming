NAME = school
OBJ = $(SRC:.c=.o)
RM = rm -f
CC = gcc
SRC = main. school.c
VIM = $(wildcard *.sw[op])
EMACS = *~
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(VIM) $(EMACS) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(EMACS) $(NAME)
	$(RM) $(OBJ)

re: oclean all
