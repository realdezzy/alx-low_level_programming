NAME:= school
OBJ:= $(SRC:.c=.o)
RM:= rm -f
CC:=gcc
SRC = main. school.c
VIM = $(wildcard *.sw[op])
EMACS = $(wildcard *~)
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) $(VIM) $(EMACS) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) $(VIM) $(EMACS) $(OBJ) $(NAME)

re: oclean all
