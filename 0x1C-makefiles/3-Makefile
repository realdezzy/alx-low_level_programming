NAME:= school
OBJ:= $(wildcard *.o)
RM:= rm
CC:=gcc
SRC:=$(wildcard *.c)
VIM:= $(wildcard *.sw[op])
EMACS:= $(wildcard *~)

all:
	$(CC) $(SRC) -o $(NAME)
clean:                  
	$(RM) -r $(VIM) $(EMACS) $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) $(VIM) $(EMACS) $(OBJ) $(NAME)

re: clean
	$(CC) $(SRC) -o $(NAME)
